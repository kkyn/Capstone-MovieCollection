<?xml version="1.0" encoding="utf-8"?>
<!-- Is actually a <FrameLayout ...-->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"

    android:transitionGroup="true"
    >

    <!--<TextView
        android:id="@+id/mvdtls_textviewid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|right"
        android:text="layout/fragment_moviedetails.xml " />-->

    <!-- Is a LinearLayout ... and orientation is vertical -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        >

        <!-- Image fades in/out as the toolbar collapse/expand -->
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="?android:attr/actionBarSize"

            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="72dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"

            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            >

            app:expandedTitleMarginStart="72dp"

            android:minHeight="40dp"

            <com.example.android.fnlprjct.DynamicHeightNetworkImageView

                android:id="@+id/moviethumbnail_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"

                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|exitUntilCollapsed"
                >

            </com.example.android.fnlprjct.DynamicHeightNetworkImageView>

            <!-- Toolbar, id=toolbar -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ToolbarTheme"
                app:layout_collapseMode="pin"
                app:theme="@style/ToolbarTheme"
                >

                android:titleTextColor="@color/pink_a400"
                app:theme="@style/ToolbarTheme"
                app:theme="@style/Toolbar.TitleText"
                android:background="?attr/selectableItemBackground"
                app:titleTextAppearance="@style/Toolbar.TitleText"

                app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" <!-- ???!!!! -->



            android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"

                android:paddingBottom="20dp"
                android:minHeight="?android:attr/actionBarSize"
                app:title="Toolbar Title"

                android:background="@drawable/ripple"
                android:background="?attr/selectableItemBackground" <!-- A -->
                android:background="?attr/selectableItemBackgroundBorderless"   <!-- A -->

                android:background="@drawable/ripple"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

                app:theme="@style/ToolbarStyle"
                app:popupTheme="@style/AppTheme"

                android:fitsSystemWindows="true"
                android:theme="@style/ToolbarStyle" <!-- bad -->
                app:theme="@style/ThemeOverlay.AppCompat"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:navigationIcon="@drawable/ic_arrow_back"

                <!--<TextView
                    android:id="@+id/toolbar_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:text="Title"
                    android:textColor="@color/white"/>-->

                <!-- ?? above, I think CollapsingToolbarLayout or Toolbar, internally has define the 72p from edge for TextView, 'Title' ??? -->
                android:paddingLeft="56dp"  <!-- wrong, no need, 56dp to the left from the left-edge -->
                android:paddingBottom="20dp" <!-- wrong, no need -->

                android:layout_gravity="center_vertical|start" <!-- set the 'Title' to the left('start'), 75dp? -->
                android:paddingLeft="@dimen/toolbar_title_left_padding" <!-- wrong, no need -->
                android:layout_marginLeft="20dp"<!-- wrong, no need, 20dp to the right from the left-edge -->

                android:layout_gravity="center_vertical"
                android:gravity="start"

                android:layout_gravity="center_vertical|start"
                android:layout_gravity="center"

                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <!-- ccccccccccccccccccccccccccccccccccccc -->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingTop="24dp"
            >
            android:elevation="2dp"

            <include layout="@layout/fragment_details1_a"
                />

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_moviedetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:scrollbars="vertical"

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>

