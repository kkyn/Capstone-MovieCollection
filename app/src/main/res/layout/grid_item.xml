<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_500"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/textview_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_listitem_height"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/widget_text_margin"
        android:layout_marginRight="@dimen/widget_text_margin"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/widget_listitem_textcolor"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/widget_listitem_textsize"
        />

</RelativeLayout>
