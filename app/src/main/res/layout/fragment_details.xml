<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrlyt_id_4_moviedetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mvdtls_textviewid_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:text="layout/fragment_moviedetails.xml " />

            <!--<TextView
                android:id="@+id/movietitle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/hello_world"
                android:textColor="#000000"
                android:textSize="30sp" />-->

            <com.example.android.fnlprjct.DynamicHeightNetworkImageView
                android:id="@+id/moviethumbnail_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                />
            <!--<ImageView
                android:id="@+id/moviethumbnail_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/moviereleasedate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/movieratings_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/moviesynopsis_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/movievideo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Video Clip" />

            <!-- tky add, 5th June 2017 -->
            <ImageButton
                android:id="@+id/favourite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movievideo_btn"
                android:background="#00ffffff"
                android:src="@android:drawable/btn_star" />
            android:layout_below="@id/mvdtl_space"
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_moviedetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
