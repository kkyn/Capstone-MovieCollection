<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_4_reviews"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="#f0f4c3"
    app:cardCornerRadius="5dp"
    app:cardElevation="14.5sp"
    app:cardMaxElevation="8sp"
    app:cardUseCompatPadding="true"
    app:contentPadding="14.5sp"
    app:contentPaddingBottom="14.5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Reviewer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/Review_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Reviewer_textView"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:text="TextView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
