<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_4_reviews"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_background"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    card_view:cardElevation="@dimen/cardview_elevation"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="@dimen/cardview_content_padding"
    card_view:contentPaddingBottom="@dimen/cardview_content_padding"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Reviewer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_default_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/cardview_textsize"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:id="@+id/Review_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Reviewer_textView"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:text="@string/textview_default_text"
            android:textSize="@dimen/cardview_textsize"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="@fraction/line_spacing_multiplier"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
