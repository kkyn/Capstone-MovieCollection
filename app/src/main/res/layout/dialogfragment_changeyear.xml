<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/year_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/dialog_edittext_margin"
        android:layout_marginLeft="@dimen/dialog_edittext_margin"
        android:layout_marginRight="@dimen/dialog_edittext_margin"
        android:layout_marginTop="@dimen/dialog_edittext_margin"

        android:inputType="number"

        android:imeOptions="actionDone"
        android:textColor="@color/primary_text"
        />
    16dp
</LinearLayout>