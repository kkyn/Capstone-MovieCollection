<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrlyt_id_4_moviedetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--
    android:id="@+id/linear_layout_detail_movie"
    xmlns:tools="http://schemas.android.com/tools" // not necessary ??
    tools:context="com.example.android.myproject_2.MovieDetails_Fragmentnt" // not necessary ??
    tools:context="com.example.android.myproject_2.app.MovieDetails_Activity.MovieDetails_Fragment" -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewid_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:text="layout/fragment_moviedetails.xml "/>

            <TextView
                android:id="@+id/movie_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/hello_world"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/thumbnail_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movie_release_date_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/movie_ratings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/movie_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/video_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Video Clip"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
