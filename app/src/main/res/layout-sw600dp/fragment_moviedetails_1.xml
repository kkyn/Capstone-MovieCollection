        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mvdtls_textviewid_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|right"
                    android:text="sw600dp/fragment_moviedetails.xml " />

                <TextView
                    android:id="@+id/movie_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mvdtls_textviewid_1"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <!--android:textSize="30sp" android:text="@string/hello_world"-->

                <ImageView
                    android:id="@+id/thumbnail_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_title_textView" />

                <TextView
                    android:id="@+id/movie_release_date_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/thumbnail_imageView"
                    android:gravity="center_horizontal"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/movie_ratings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_release_date_textView"
                    android:gravity="center_horizontal"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/movie_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_ratings"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <android.support.v4.widget.Space
                    android:id="@+id/mvdtl_space"
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/movie_synopsis"
                    android:layout_centerInParent="true" />

                <Button
                    android:id="@+id/video_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mvdtl_space"
                    android:layout_toLeftOf="@id/mvdtl_space"
                    android:text="Video Clip" />

                <Button
                    android:id="@+id/review_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mvdtl_space"
                    android:layout_toRightOf="@id/mvdtl_space"
                    android:text="Review Clip" />

                <!--android:layout_gravity="center"  android:layout_centerHorizontal="true"
                 android:layout_alignRight="@id/video_button" -->
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>
