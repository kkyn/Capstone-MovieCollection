    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="14.5sp"
        app:cardUseCompatPadding="true"
        app:contentPadding="14.5sp"
        app:contentPaddingBottom="14.5sp">

        <!-- android:id="@+id/container_id4_moviedetails"-->
        <!--<TextView
            android:id="@+id/textviewid_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:text="sw600dp/fragment_moviedetails.xml "/>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mvdtls_textviewid_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|right"
                    android:text="sw600dp/fragment_moviedetails.xml " />

                <TextView
                    android:id="@+id/movie_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <!--android:textSize="30sp" android:text="@string/hello_world"-->

                <ImageView
                    android:id="@+id/thumbnail_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/movie_release_date_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/movie_ratings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/movie_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/video_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Video Clip" />
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>
